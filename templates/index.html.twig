          content = content + "Fanta 330ml x " + fanta.qty + " = €" + fanta.qty * fanta.price + "<br>";            
      }	 	  
	  
      // display the content variable in the myCart div.
      $( "#myCart" ).html(content);
}


$( "#viewCart" ).click(function() {
      
       updateCart();  
    
  });
 
